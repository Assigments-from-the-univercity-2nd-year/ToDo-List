<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addEditTask.AddEditTaskFragment">

    <LinearLayout
        android:id="@+id/linearlayout_addedittask_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_addedittask_taskname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task name"
            android:inputType="text" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_addedittask_importance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="important task" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_addedittask_datecreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created: " />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_addedittask_parts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/linearlayout_addedittask_header"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="152dp"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:focusable="true"
        app:tint="?attr/colorOnSecondary"
        android:src="@drawable/ic_baseline_task_alt_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="84dp"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:focusable="true"
        app:tint="?attr/colorOnSecondary"
        android:src="@drawable/ic_baseline_text_fields_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_fragmenttasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom|end"
        android:backgroundTint="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        app:tint="?attr/colorOnPrimary"
        android:src="@drawable/ic_baseline_done_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>