<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/tasksFragment">

    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.example.todolist.presentation.tasks.TasksFragment"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/action_tasksFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.example.todolist.presentation.addEditTask.AddEditTaskFragment"
        tools:layout="@layout/fragment_add_edit_task">
        <argument
            android:name="task"
            app:argType="com.example.todolist.presentation.entities.components.TaskUiState"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/deleteAllCompletedDialogFragment"
        android:name="com.example.todolist.presentation.delteAllCompeted.DeleteAllCompletedDialogFragment"
        android:label="DeleteAllCompletedDialogFragment" /><action android:id="@+id/action_global_deleteAllCompletedDialogFragment" app:destination="@id/deleteAllCompletedDialogFragment"/>
    <dialog
        android:id="@+id/deleteFolderDialogFragment"
        android:name="com.example.todolist.presentation.deleteFolder.DeleteFolderDialogFragment"
        android:label="DeleteFolderDialogFragment" >
        <argument
            android:name="folder"
            app:argType="com.example.todolist.presentation.entities.components.FolderUiState" />
    </dialog><action android:id="@+id/action_global_deleteFolderDialogFragment" app:destination="@id/deleteFolderDialogFragment"/>
    <dialog
        android:id="@+id/addEditFolderDialogFragment"
        android:name="com.example.todolist.presentation.addEditFolder.AddEditFolderDialogFragment"
        android:label="AddEditFolderDialogFragment" >
        <argument
            android:name="parentFolder"
            app:argType="com.example.todolist.presentation.entities.components.FolderUiState" />
        <argument
            android:name="currentFolder"
            app:argType="com.example.todolist.presentation.entities.components.FolderUiState"
            app:nullable="true" />
    </dialog>
    <action android:id="@+id/action_global_addEditFolderDialogFragment" app:destination="@id/addEditFolderDialogFragment" />
    <dialog
        android:id="@+id/quickFolderChangeDialogFragment"
        android:name="com.example.todolist.presentation.quickFolderChange.QuickFolderChangeDialogFragment"
        android:label="QuickFolderChangeDialogFragment" >
        <argument
            android:name="pinnedFolders"
            app:argType="com.example.todolist.presentation.entities.components.FolderUiState[]" />
    </dialog>
    <action android:id="@+id/action_global_quickFolderChangeDialogFragment" app:destination="@id/quickFolderChangeDialogFragment" />
</navigation>